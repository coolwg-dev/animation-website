---
const { title = 'Animation Website' } = Astro.props;
const year = new Date().getFullYear();
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <link rel="icon" href="/favicon.svg" />
    <style>
      body { font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial; margin:0; padding:0; color:#0f172a; background: linear-gradient(180deg,#fff,#f8fafc); }
      header{padding:1rem 2rem;background:#0ea5a4;color:white}
      footer{padding:1rem 2rem;font-size:.9rem;color:#475569}
      main{padding:2rem;max-width:900px;margin:0 auto}
      a { color: #0ea5a4 }
      code { background:#f1f5f9; padding:.2rem .4rem; border-radius:4px }
    </style>
  </head>
  <body>
    <header>
      <div style="display:flex;align-items:center;justify-content:space-between">
        <h1 style="margin:0">{title}</h1>
        <nav aria-label="Main navigation">
          <a href="/" style="margin-right:1rem;color:white;opacity:.95">Home</a>
          <a href="/fourier_square_wave" style="margin-right:1rem;color:white;opacity:.95">Fourier</a>
          <a href="/power_curves" style="margin-right:1rem;color:white;opacity:.95">Power curves</a>
          <a href="/riemann_sum_manim" style="margin-right:1rem;color:white;opacity:.95">Riemann sum</a>
          <a href="/secant_to_tangent" style="color:white;opacity:.95">Secant → Tangent</a>
        </nav>
      </div>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      © {year} Animation Website — placeholder
    </footer>
  </body>
</html>
