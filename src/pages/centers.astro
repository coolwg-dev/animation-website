---
import BaseLayout from "../layouts/BaseLayout.astro";

const centroid = new URL('../../public/videos/centroid_scene/1080p60/centroid_1080p.mp4', import.meta.url).href;
const circumcenter = new URL('../../public/videos/circumcenter_scene/1080p60/circumcenter_1080p.mp4', import.meta.url).href;
const incenter = new URL('../../public/videos/incenter_scene/1080p60/incenter_1080p.mp4', import.meta.url).href;
const orthocenter = new URL('../../public/videos/orthocenter_scene/1080p60/orthocenter_1080p.mp4', import.meta.url).href;

const videos = [
  { id: 'centroid', title: 'Centroid', src: centroid },
  { id: 'circumcenter', title: 'Circumcenter', src: circumcenter },
  { id: 'incenter', title: 'Incenter', src: incenter },
  { id: 'orthocenter', title: 'Orthocenter', src: orthocenter }
];
---

<BaseLayout title="Center points - videos">
  <h2>Center constructions</h2>
  <p>Four videos showing different triangle centers. These are imported with static imports (via <code>new URL(..., import.meta.url)</code>), not by scanning directories.</p>

  <div style="display:grid;grid-template-columns:repeat(auto-fit,minmax(260px,1fr));gap:1rem;align-items:start">
    {videos.map(video => (
      <figure key={video.id} style="margin:0;background:#fff;padding:1rem;border-radius:8px;box-shadow:0 1px 4px rgba(2,6,23,.06)">
        <video controls width="100%" src={video.src} aria-labelledby={`${video.id}-caption`} style="border-radius:6px;display:block"/>
        <figcaption id={`${video.id}-caption`} style="margin-top:.5rem;font-weight:600">{video.title}</figcaption>
      </figure>
    ))}
  </div>
</BaseLayout>
