---
import BaseLayout from '../layouts/BaseLayout.astro';
import fs from 'fs';
const title = 'Secant to Tangent';

const videoFolder = new URL('../../public/videos/secant_to_tangent', import.meta.url).pathname;
let videos = [];
try {
  videos = fs.readdirSync(videoFolder).filter(f => /\.(mp4|webm|ogg)$/i.test(f));
} catch (e) {
  videos = [];
}
---

<BaseLayout title={title}>
  <h2>Secant â†’ Tangent</h2>
  <p>Animations illustrating how secant lines approach the tangent as the interval shrinks.</p>
  {videos.length ? (
    <div>
      <h3>Videos</h3>
      <ul style="list-style:none;padding:0">
        {videos.map(v => (
          <li style="margin-bottom:1rem">
            <strong>{v}</strong>
            <div>
              <video controls width="640" src={`/videos/secant_to_tangent/${v}`}>Your browser doesn't support the video element.</video>
            </div>
          </li>
        ))}
      </ul>
    </div>
  ) : (
    <p>No videos found in <code>public/videos/secant_to_tangent/</code>. Add .mp4/.webm/.ogg files to that folder and refresh.</p>
  )}

</BaseLayout>
